        function getUsersCount() {
            $.ajax({
                type: 'GET',
                url: '/Home/getUsers',
                success: function (data) {
                    $("#userReg").text(data);
                }
            });
        }
        function getAccountRequests() {
            var HTML = '<div class="card"><div class="card-header"><h3 class="card-title" id="tblHeader">Pending Registeration Requests</h3></div >';
            HTML += '<div class="card-body"><table id = "example2" class="table table-bordered table-hover"><thead><tr>';
            HTML += '<th>UserName</th><th>UserEmail</th><th>UserPassword</th><th>Role</th><th>Status</th><th>Actions</th></tr></thead><tbody>';
            $.ajax({
                type: 'GET',
                url: '/Home/getAccountRequests',
                success: function (data) {
                    var count = 0;
                    for (var i = 0; i < data.length; i++) {
                        if (data[i].status == "Pending")
                            count++;
                    }
                    $("#pendingCount").html(count);
                    for (var i = 0; i < data.length; i++) {
                        HTML += '<tr><td>' + data[i].userName + '</td>';
                        HTML += '<td>' + data[i].userEmail + '</td>';
                        HTML += '<td>' + data[i].userPassword + '</td>';
                        HTML += '<td>' + data[i].role + '</td>';
                        HTML += '<td>' + data[i].status + '</td>';
                        if (data[i].status == "Pending")
                            HTML += '<td><button style="margin-right:5px" class="btn btn-success" onclick="approveRequest(`' + data[i].userName + '`,`' + data[i].userEmail + '`,`' + data[i].userPassword + '`,`' + data[i].role + '`,)">Approve</button><button style="margin-right:5px" class="btn btn-danger" onclick="declineRequest(`' + data[i].userEmail + '`)">Decline</button></td></tr>';
                        if (data[i].status == "Approved")
                            HTML += '<td><span style="margin-right:5px" class="btn btn-success">Approved</span></td></tr>';
                        else if (data[i].status == "Declined")
                            HTML += '<td><span style="margin-right:5px" class="btn btn-Danger">Declined</span></td></tr>';
                    }
                    HTML += '</tbody></table></div>';
                    $("#table_records").html(HTML);
                }

            });
        }
        function approveRequest(name, email, password, role) {
            $.ajax({
                type: 'POST',
                url: '/Home/approveRequest',
                data: { 'name': name, 'email': email, 'password': password, 'role': role },
                success: function (data) {
                    getUsersCount();
                    getAccountRequests();
                    alert('Request Approved!!');
                }
            });
        }
        function declineRequest(email) {
            $.ajax({
                type: 'POST',
                url: '/Home/declineRequest',
                data: { 'email': email },
                success: function (data) {
                    getAccountRequests();
                    alert('Request Declined!!');
                }

            });
        }
        function getFreelancers() {
            $.ajax({
